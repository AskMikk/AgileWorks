}

<div class="table-container">
    <h2>@ViewData["Title"]</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Kirjeldus</th>
                <th>Esitamise aeg</th>
                <th>Lahendamise t채htaeg</th>
                <th>Tegevused</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inquiry in Model)
            {
