                <tr class="@deadlineClass">
                    <td>@inquiry.Description</td>
                    <td>@inquiry.SubmissionTime.ToString("g")</td>
                    <td>@inquiry.ResolutionDeadline.ToString("g")</td>
                    <td>
                        <a asp-action="Resolve" asp-route-id="@inquiry.Id" class="btn btn-success">M채rgi lahendatuks</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary btn-create-new">Loo uus p채ring</a>
</div>
